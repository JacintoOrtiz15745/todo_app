<br>
<center>
  <h1>Listing TODO</h1>
  <br>
  <%= link_to 'New list', new_list_path %>
  <br>
  <br>
  <table>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th></th>
    </tr>

    <% @list.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td><%= list.text %></td>
        <td><%= link_to 'Show', list_path(list) %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list_path(list),
            method: :delete,
            data: {confirm: 'Are you sure?'}%></td>
      </tr>
    <% end %>
  </table>
</center>
